<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
<title>Register</title>

	{% block stylesheets %}
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<link rel="stylesheet" href="../public/CSS/main.css">
		<link rel="stylesheet" href="{{ asset('../public/CSS/adduser.css')}}">
		<style>
			main {
				position: initial;
			}
		</style>
	{% endblock %}

	{% block javascripts %}
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
		<script src="https://apis.google.com/js/platform.js" async defer></script>
		{{ encore_entry_script_tags('app') }}
	{% endblock %}

</head>

<body>
    <div class="row m-0 p-0 justify-content-center align-items-center">
		<main class="p-0 m-0 ">
		<section class="px-5 book-list">
			<div class="container pt-5">
				<div class="row d-flex align-items-center justify-content-center">
					<div class="align-items-center">
						<h1>Créer votre compte</h1>
					</div>
					<div class="separateur bg-green mb-2"></div>
					<div class="row">
							<div class="col-6 my-5">
								<img src="{{ asset('../public/images/login-image.png') }}" id="login_image"
									alt="image du login" />
							</div>
							<div class="col-6 mt-5" id="register_form">
								{{ form_start(registrationForm) }}
								<div class="row form-control form-control-lg border-yellow px-5 py-3 my-5 d-flex flex-column align-items-center" style="border-radius: 3em">
							
								<div class="pb-2 text-center">
									{{ form_row(registrationForm.email) }}
								</div>
								<div class="pb-2 text-center">
									{{ form_row(registrationForm.plainPassword, {
									label: 'Mot de Passe',
									attr : {'class' : 'form-control form-control-lg border-yellow my-4 input'}
									}) }}
								</div>
								<div class="pb-2 text-center">
									{{ form_row(registrationForm.first_name, {
									label: "Prénom"
									}) }}
								</div>
								<div class="pb-2 text-center">
									{{ form_row(registrationForm.last_name , {
									label: "Nom"
									}) }}
								</div>
								<div class="text-center">
									<button type="submit" class="mt-1 px-4 btn btn-yellow">Créer</button>
								</div>
							</div>
						</div>
						{{ form_end(registrationForm) }}
					</div>
				</div>
			</div>
		</section>
	</div>
</body>
</html>