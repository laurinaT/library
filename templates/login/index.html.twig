<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
<title>Register</title>

	{% block stylesheets %}
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<link rel="stylesheet" href="../public/CSS/main.css">
		<link rel="stylesheet" href="{{ asset('../public/CSS/login.css')}}">
		<style>
			main {
				position: initial;
			}
		</style>
	{% endblock %}

	{% block javascripts %}
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
		<script src="https://apis.google.com/js/platform.js" async defer></script>
		{{ encore_entry_script_tags('app') }}
	{% endblock %}

</head>

<body>
    <div class="row m-0 p-0 justify-content-center align-items-center">
	<main class="col-12 p-0 m-0 ">
		<section class="px-5 book-list">
			{# --------------logo------------ #}
			<div>
				<img class="my-1" src="{{ asset('../public/images/logo.png') }}" id="logo_login"
					alt="logo de la bibliothèque !" />
			</div>
			<div class="text-align-center mb-2">
				<h1>Bienvenue sur votre page de connexion</h1>
			</div>
			{# --------------image login------------ #}
			<div class="row">

				<div class="col-6 align-items-center">
					<img class="my-2" src="{{ asset('../public/images/login-image.png') }}" id="login_image"
						alt="image du login" />
				</div>

				{# --------------Formulaire------------ #}
				<div class="col-5 my-2">
					<form action="{{ path('login') }}" method="post" id="login_formulaire">

						<div class="col form-control form-control-lg border-yellow p-5 my-5 text-align-center"
							style="border-radius: 3em">
							<div class="mt-2 pb-3">
								<label for="username"> Votre email</label>
								<input class="form-control form-control-lg border-yellow my-4" id="username" name="_username"
									value="{{ last_username }}" />
							</div>
							<div class="mt-2 pb-3">
								<label for="password">Votre mot de passe</label>
								<input class="form-control form-control-lg border-yellow my-4" type="password" id="password"
									name="_password" />
							</div>
							<div class="text-align-center">
								<button class="btn btn-yellow" type="submit" style="font-size: large;">Me connecter</button>
							</div>
						</div>


					</form>
				</div>
			</div>
			<section class="d-flex flex-row justify-content-center align-items-center">
				<h3>Première connexion?</h3>
				<a href="{{path('app_register')}}" class="mx-3 mb-2 btn btn-red" style="font-size: larger;">S'enregistrer</a>
			</section>
		</section>
	</main>
	</div>
</body>
</html>